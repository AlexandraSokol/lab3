//Сократить массив удалив из него все элементы величина которых находится между а и b
#include <stdio.h>
#include <iostream>
#include <time.h>
#include <stdlib.h>
#define N 10
main() {
    int a[N], i,j, m, l,h;
    printf("Границы массива: ");
    scanf("%d%d", &l,&h);
    srand(time(NULL));
    for (i=0; i<N; i++) {
        a[i] = rand()%(h-l) + l;
        printf("%d ", a[i]);
    }
    printf("\n");
    
    printf("Удаляемый диапазон: ");
    scanf("%d%d", &l,&h);
    i = 0;
    m = N;
    while (i < m)
        if (a[i] <= h && a[i] >= l) {
            m -= 1;
            for (j=i; j < m; j++)
                a[j] = a[j+1];
        } else
            i += 1;
    
    for (i=m; i<N; i++) a[i]=0;
    for (i=0; i<N; i++) {
        printf("%d ", a[i]);
    }
    printf("\n");
    system ("pause");
}
