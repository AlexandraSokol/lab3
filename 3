//Найти сумму всех цифр массива
#include <stdio.h>
#include <iostream>
#include <time.h>
#include <stdlib.h>
#define N 4

main() {
    int a[N], i, sum, num;
    srand(time(NULL));
    sum = 0;
    for (i=0; i<N; i++) {
        a[i] = rand()%20;
        printf("%3d", a[i]);
        num = a[i];
        while (num > 0) {
            sum += num%10;
            num /= 10;
        }
    }
    printf("\n%d\n", sum);
    system ("pause");
}
